<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/display</item>
        <item name="colorPrimaryDark">@color/display</item>
        <item name="colorAccent">@color/operations</item>
        <item name="advancedOperations">@color/advancedOperations</item>
        <item name="operations">@color/operations</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/display</item>
        <item name="colorPrimaryDark">@color/display</item>
        <item name="colorAccent">@color/operations</item>
        <item name="advancedOperations">@color/advancedOperationsDark</item>
        <item name="operations">@color/operationsDark</item>
    </style>

</resources>
