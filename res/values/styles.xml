<resources>

    <!-- Light application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="panel1">@color/panel_1_light</item>
        <item name="panel2">@color/panel_2_light</item>
        <item name="backspace">@mipmap/ic_backspace_black_24dp</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="panel1">@color/panel_1_dark</item>
        <item name="panel2">@color/panel_2_dark</item>
        <item name="backspace">@mipmap/ic_backspace_white_24dp</item>
    </style>
</resources>
